#Test connection to the hosts
ansible -i hosts pop_os -m ping -u holivas

#Print some stats from the hosts
ansible pop_os -a "df -h"
ansible pop_os -a "free -h"

#Install some packages
ansible pop_os --limit pop_os1 -b -m apt -a "name=htop state=present"
ansible pop_os -b -m package -a "name=git state=present"

#Users and group management
ansible pop_os -b -m user -a "name=alice state=present  group=red createhome=yes"
ansible pop_os -b -m group -a "name=red state=present"
ansible pop_os -b -m group -a "name=blue state=present"

#Fetch file status
ansible pop_os -m stat -a "path=/etc/rc.local"

#Copy files
ansible pop_os -m copy -a "src=files/hello-world.sh dest=/home/holivas/ mode=0755"
ansible pop_os -a "/home/holivas/hello-world.sh"
ansible pop_os -m file -a "name=/home/holivas/hello-world.sh state=absent

#File management
ansible pop_os -m file -a "dest=/az/app mode=644 state=directory"
ansible pop_os -m file -a "dest=/az/app state=absent"
ansible pop_os -m cron -a "name=weekly-update weekday=0 hour=5 minute=0 job=/az/iarvizu/bin/update.sh"